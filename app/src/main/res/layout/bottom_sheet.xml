<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:padding="24dp"
    android:layout_height="280dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Compartilhar com ..."
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ico_share_facebook"
            android:id="@+id/ico_share_whatsApp"
            android:onClick="onClickWhatsApp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ico_whatsapp" />

    <TextView
        android:id="@+id/text_whats"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ico_share_whatsApp"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_whatsApp"
        app:layout_constraintStart_toStartOf="@+id/ico_share_whatsApp"
        android:text="WhatsApp"
        android:layout_height="wrap_content"/>



        <ImageView
            app:layout_constraintTop_toTopOf="@+id/ico_share_whatsApp"
            app:layout_constraintStart_toEndOf="@+id/ico_share_whatsApp"
            app:layout_constraintEnd_toStartOf="@+id/ico_share_instagram"
            android:id="@+id/ico_share_facebook"
            android:layout_width="80dp"
            android:onClick="onClickFacebook"
            android:layout_height="70dp"
            android:src="@drawable/ico_facebook" />


    <TextView
        android:id="@+id/text_facebook"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ico_share_facebook"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_facebook"
        app:layout_constraintStart_toStartOf="@+id/ico_share_facebook"
        android:text="Facebook"
        android:layout_height="wrap_content"/>

        <ImageView
            app:layout_constraintTop_toTopOf="@+id/ico_share_facebook"
            app:layout_constraintStart_toEndOf="@+id/ico_share_facebook"
            app:layout_constraintEnd_toStartOf="@+id/ico_share_telegram"
            android:id="@+id/ico_share_instagram"
            android:onClick="onClickInstagram"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ico_instagram" />

    <TextView
        android:id="@+id/text_instagram"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ico_share_instagram"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_instagram"
        app:layout_constraintStart_toStartOf="@+id/ico_share_instagram"
        android:text="Instagram"
        android:layout_height="wrap_content"/>


        <ImageView
            app:layout_constraintTop_toTopOf="@+id/ico_share_instagram"
            app:layout_constraintStart_toEndOf="@+id/ico_share_instagram"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/ico_share_telegram"
            android:onClick="onClickTelegram"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ico_telegram" />

    <TextView
        android:id="@+id/text_telegram"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ico_share_telegram"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_telegram"
        app:layout_constraintStart_toStartOf="@+id/ico_share_telegram"
        android:text="Telegram"
        android:layout_height="wrap_content"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@+id/text_whats"
            android:id="@+id/ico_share_twitter"
            app:layout_constraintStart_toStartOf="@+id/ico_share_whatsApp"
            android:layout_marginTop="16dp"
            android:onClick="onClickTwitter"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/ico_twitter" />

    <TextView
        android:id="@+id/text_twitter"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ico_share_twitter"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_twitter"
        app:layout_constraintStart_toStartOf="@+id/ico_share_twitter"
        android:text="Twitter"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@+id/ico_share_twitter"
        app:layout_constraintStart_toStartOf="@+id/ico_share_facebook"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_facebook"
        android:id="@+id/ico_share_linkedIn"
        android:onClick="onClickLinkeIn"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:src="@drawable/ico_linkedin" />

    <TextView
        android:id="@+id/text_linkedin"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ico_share_linkedIn"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_linkedIn"
        app:layout_constraintStart_toStartOf="@+id/ico_share_linkedIn"
        android:text="LinkedIn"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@+id/ico_share_linkedIn"
        app:layout_constraintStart_toStartOf="@+id/ico_share_instagram"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_instagram"
        android:id="@+id/ico_share_email"
        android:onClick="onClickEmail"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:src="@drawable/ico_email" />

    <TextView
        android:id="@+id/text_email"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ico_share_email"
        app:layout_constraintEnd_toEndOf="@+id/ico_share_email"
        app:layout_constraintStart_toStartOf="@+id/ico_share_email"
        android:text="Email"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>